# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Email Configuration
DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DJANGO_EMAIL_HOST=smtp.yandex.ru
DJANGO_EMAIL_PORT=587
DJANGO_EMAIL_HOST_USER=your-email@yandex.ru
DJANGO_EMAIL_HOST_PASSWORD=your-app-password
DJANGO_EMAIL_USE_TLS=1
DJANGO_EMAIL_USE_SSL=0
DJANGO_DEFAULT_FROM_EMAIL=noreply@example.com

# Email Verification Settings
EMAIL_VERIFICATION_CODE_TTL_SECONDS=600
EMAIL_VERIFICATION_RESEND_COOLDOWN_SECONDS=60
EMAIL_VERIFICATION_MAX_ATTEMPTS=10
EMAIL_VERIFICATION_MAX_SENDS=20

# Redis/Celery (optional)
REDIS_URL=redis://localhost:6379/0
